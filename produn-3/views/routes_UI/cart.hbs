{{#if success_message}}
<br>
<div class="alert alert-success">
  {{success_message}}
</div>
{{/if}}

{{#if error_message}}
<br>
<div class="alert alert-danger">
  {{error_message}}
</div>
{{/if}}
<br>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    {{#if itemsArray}}
    <ul class="list-group">
      {{#each itemsArray}}
  
      
      <li style="margin-top:10px" class="list-group-item">
        <span style="font-weight:bold">{{item.title}}</span>
        &ensp;

        <span class="badge badge-success">${{item.price}}</span>
        &ensp;&ensp;

        <div class="btn-group">
          <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Remove
          </button>


          <div class="dropdown-menu">
            <a class="dropdown-item" href="/reduce/{{item._id}}">Reduce </a>
            <a class="dropdown-item" href="/removeItem/{{item._id}}">Remove </a>
          </div>
        </div>
        
  
        


        <span style="float:right; font-size:15px;" > <span style="font-weight:bold">{{qty}}</span> units</span>
      </li>
      {{/each}}
    </ul>
    <br>
    <h5>Total Amount: ${{cart.totalPrice}}</h5>
    <hr>
    <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    {{else}}
    <h4 align="center">No items in cart</h4>
    {{/if}}

  </div>
  <div class="col-md-4"></div>
</div>